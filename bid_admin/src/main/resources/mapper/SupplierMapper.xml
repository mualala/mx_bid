<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.meixin.bid_admin.mappers.dao.SupplierDao" >

    <resultMap id="querySupplierListByUidMap" type="com.meixin.bid_admin.entity.Supplier">
        <id column="supplier_id" property="supplierId" jdbcType="INTEGER" />
        <id column="username" property="username" jdbcType="VARCHAR" />
        <id column="company_name" property="companyName" jdbcType="VARCHAR" />
        <id column="license_number" property="licenseNumber" jdbcType="VARCHAR" />
        <id column="legal" property="legal" jdbcType="VARCHAR" />
        <id column="s_name" property="name" jdbcType="VARCHAR" />
        <id column="email" property="email" jdbcType="VARCHAR" />
        <id column="phone" property="phone" jdbcType="VARCHAR" />
        <id column="fax" property="fax" jdbcType="VARCHAR" />
        <id column="company_address" property="companyAddress" jdbcType="VARCHAR" />
        <id column="zip_code" property="zipCode" jdbcType="VARCHAR" />
        <id column="company_web" property="companyWeb" jdbcType="VARCHAR" />
        <id column="company_level" property="companyLevel" jdbcType="VARCHAR" />
        <id column="company_desc" property="companyDesc" jdbcType="VARCHAR" />
        <id column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <id column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
        <association property="supplierType" javaType="com.meixin.bid_admin.entity.SupplierType">
            <result column="supplier_type_id" property="supplierTypeId" jdbcType="INTEGER" />
            <result column="st_name" property="name" jdbcType="VARCHAR" />
        </association>
    </resultMap>

    <select id="querySupplierListByUid" parameterType="com.meixin.bid_admin.web.dto.SupplierCondition" resultMap="querySupplierListByUidMap">
        SELECT
          S.supplier_id, S.username, ST.supplier_type_id, ST.name st_name, S.company_name, S.license_number, S.legal, S.name s_name,
          S.email, S.phone, S.fax, S.company_address, S.zip_code, S.company_web, S.company_level, S.company_desc,
          S.create_time, S.update_time, S.uid
        FROM supplier S
        INNER JOIN supplier_type ST ON S.supplier_type_id=ST.supplier_type_id
        <where>
            <if test="supplierTypeId != null and supplierTypeId != '' and supplierTypeId > 0"> AND S.supplier_type_id=#{supplierTypeId}</if>
            <if test="companyName != null and companyName != '' and companyName != '%%'"> AND S.company_name LIKE #{companyName}</if>
            <if test="phone != null and phone != ''"> AND S.phone=#{phone}</if>
            <if test="(startDate != null and startDate != '') and (endDate != null and endDate != '')">
                AND S.create_time BETWEEN #{startDate} AND #{endDate}
            </if>
        </where>
        <if test="sortName != null and sortName == 'supplierId'">ORDER BY S.supplier_id ${sortOrder}</if>
        <if test="sortName != null and sortName == 'supplierType.name'">ORDER BY ST.name ${sortOrder}</if>
        <if test="sortName != null and sortName == 'createTime'">ORDER BY S.create_time ${sortOrder}</if>
        <if test="sortName != null and sortName == 'updateTime'">ORDER BY S.update_time ${sortOrder}</if>
        limit #{start}, #{size}
    </select>

    <select id="querySupplierListTotal" parameterType="com.meixin.bid_admin.web.dto.SupplierCondition" resultType="int">
        SELECT count(0) FROM supplier
        <where>
            <if test="supplierTypeId != null and supplierTypeId != '' and supplierTypeId > 0"> AND supplier_type_id=#{supplierTypeId}</if>
            <if test="companyName != null and companyName != ''"> AND company_name LIKE #{companyName}</if>
            <if test="phone != null and phone != ''"> AND phone=#{phone}</if>
            <if test="(startDate != null and startDate != '') and (endDate != null and endDate != '')">
                AND create_time BETWEEN #{startDate} AND #{endDate}
            </if>
        </where>
    </select>

    <delete id="deleteSuppliers">
        DELETE FROM supplier
        <where>
            supplier_id in
            <foreach collection="supplierIds" item="id" index="index" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </where>
    </delete>

</mapper>