<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.meixin.bid_admin.mappers.dao.AdminDao" >

    <select id="queryUserListByUid" parameterType="com.meixin.bid_admin.web.dto.AdminCondition" resultType="com.meixin.bid_admin.entity.Admin">
        SELECT * FROM sys_user
        <where>
            <if test="username != null and username != ''"> AND username=#{username}</if>
            <if test="(startDate != null and startDate != '') and (endDate != null and endDate != '')">
                AND create_time BETWEEN #{startDate} AND #{endDate}
            </if>
        </where>
        <if test="sortName != null and sortName == 'username'">ORDER BY username ${sortOrder}</if>
        <if test="sortName != null and sortName == 'createTime'">ORDER BY create_time ${sortOrder}</if>
        <if test="sortName != null and sortName == 'updateTime'">ORDER BY update_time ${sortOrder}</if>
        limit #{start}, #{size}
    </select>

    <select id="queryUserListTotal" parameterType="com.meixin.bid_admin.web.dto.AdminCondition" resultType="int">
      SELECT count(0) FROM sys_user
        <where>
            <if test="username != null and username != ''"> AND username=#{username}</if>
            <if test="(startDate != null and startDate != '') and (endDate != null and endDate != '')">
                AND create_time BETWEEN #{startDate} AND #{endDate}
            </if>
        </where>
    </select>
    
    <delete id="deleteUsers">
        DELETE FROM sys_user
        WHERE name!='root' AND uid in
        <foreach collection="uids" item="id" index="index" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>


</mapper>